<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.noobping.listenmoe</id>
  <name>LISTEN.moe</name>
  <summary>A cute little radio app. Powered by LISTEN.moe!</summary>
  <description>
    <p>
      This is an unofficial app for LISTEN.moe. Stream and metadata provided by LISTEN.moe.
    </p>
    <ul>
      <li>Listen to J-POP/K-POP</li>
      <li>Pause and resume the live stream</li>
    </ul>
  </description>

  <developer id="io.github.noobping">
    <name>noobping</name>
  </developer>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>

  <icon type="stock">io.github.noobping.listenmoe</icon>

  <url type="homepage">https://github.com/noobping/listenmoe</url>
  <url type="bugtracker">https://github.com/noobping/listenmoe/issues</url>
  <url type="vcs-browser">https://github.com/noobping/listenmoe</url>

  <supports>
    <control>keyboard</control>
    <control>pointing</control>
    <control>touch</control>
  </supports>

  <categories>
    <category>Audio</category>
    <category>Music</category>
  </categories>

  <keywords>
    <keyword>J-POP</keyword>
    <keyword>K-POP</keyword>
    <keyword>Radio</keyword>
  </keywords>

  <recommends>
    <display_length compare="ge">300</display_length>
  </recommends>

  <content_rating type="oars-1.1" />

  <launchable type="desktop-id">io.github.noobping.listenmoe.desktop</launchable>

  <screenshots>
    <screenshot type="default">
      <image>
        https://raw.githubusercontent.com/noobping/listenmoe/main/data/io.github.noobping.listenmoe.screenshot.png</image>
      <caption>Main window when connected</caption>
      <image>
        https://raw.githubusercontent.com/noobping/listenmoe/main/data/demo.png</image>
      <caption>Sound animations in the background</caption>
    </screenshot>
  </screenshots>

  <provides>
    <binary>listenmoe</binary>
  </provides>

  <releases>
    <release version="1.0.1" date="2025-12-23">
      <description>
        <p>
          This release focuses on visuals and localization.
        </p>
        <ul>
          <li>Fine-tuned dark/light mode detection so light colors are no longer mistaken for dark ones.</li>
          <li>Polished translations and improved how they are applied.</li>
        </ul>
      </description>
    </release>
    <release version="1.0.0" date="2025-12-21">
      <description>
        <p>
          Initial release.
        </p>
        <ul>
          <li>Listen to J-POP/K-POP</li>
          <li>Pause and resume the live stream</li>
        </ul>
      </description>
    </release>
  </releases>
</component>