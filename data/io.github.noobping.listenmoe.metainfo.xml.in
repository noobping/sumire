<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.noobping.listenmoe</id>
  <name>ListenMoe</name>
  <summary>J-POP and K-POP radio</summary>
  <description>
    <p>
      This is an unofficial app for LISTEN.moe. Stream and metadata provided by LISTEN.moe.
    </p>
    <ul>
      <li>Listen to J-POP and K-POP</li>
      <li>Pause and resume the live stream</li>
      <li>Animated sound bars that react to the music</li>
      <li>Dynamic colors based on the current album or artist cover</li>
      <li>No ads</li>
      <li>Written in Rust</li>
    </ul>
  </description>

  <developer id="io.github.noobping">
    <name>noobping</name>
  </developer>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>

  <icon type="stock">io.github.noobping.listenmoe</icon>

  <url type="homepage">https://github.com/noobping/listenmoe</url>
  <url type="bugtracker">https://github.com/noobping/listenmoe/issues</url>
  <url type="vcs-browser">https://github.com/noobping/listenmoe</url>

  <branding>
    <color type="primary" scheme_preference="light">#ffa348</color>
    <color type="primary" scheme_preference="dark">#ff015b</color>
  </branding>

  <supports>
    <control>keyboard</control>
    <control>pointing</control>
    <control>touch</control>
  </supports>

  <categories>
    <category>Audio</category>
    <category>Music</category>
  </categories>

  <keywords>
    <keyword>J-POP</keyword>
    <keyword>K-POP</keyword>
    <keyword>Radio</keyword>
  </keywords>

  <recommends>
    <display_length compare="ge">300</display_length>
  </recommends>

  <content_rating type="oars-1.1" />

  <launchable type="desktop-id">io.github.noobping.listenmoe.desktop</launchable>

  <screenshots>
