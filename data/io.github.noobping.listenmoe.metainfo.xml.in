<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.noobping.listenmoe</id>
  <name>Listen Moe</name>
  <summary>J-POP and K-POP radio</summary>
  <description>
    <p>
      It is time to ditch other radios. Stream and metadata provided by LISTEN.moe.
    </p>
    <ul>
      <li>Listen to J-POP and K-POP</li>
      <li>Pause and resume the live stream</li>
      <li>Animated sound bars that react to the music</li>
      <li>Dynamic colors based on the current album or artist cover</li>
      <li>No ads</li>
    </ul>
  </description>

  <developer id="io.github.noobping">
    <name>noobping</name>
  </developer>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>

  <icon type="stock">io.github.noobping.listenmoe</icon>

  <url type="homepage">https://github.com/noobping/listenmoe</url>
  <url type="bugtracker">https://github.com/noobping/listenmoe/issues</url>
  <url type="vcs-browser">https://github.com/noobping/listenmoe</url>

  <branding>
    <color type="primary" scheme_preference="light">#00FFA5</color>
    <color type="primary" scheme_preference="dark">#AC003D</color>
  </branding>

  <supports>
    <control>keyboard</control>
    <control>pointing</control>
    <control>touch</control>
  </supports>

  <categories>
    <category>Audio</category>
    <category>Music</category>
  </categories>

  <keywords>
    <keyword>Audio</keyword>
    <keyword>J-POP</keyword>
    <keyword>K-POP</keyword>
    <keyword>Listen</keyword>
    <keyword>Music</keyword>
    <keyword>Radio</keyword>
  </keywords>

  <recommends>
    <display_length compare="ge">300</display_length>
  </recommends>

  <content_rating type="oars-1.1" />

  <launchable type="desktop-id">io.github.noobping.listenmoe.desktop</launchable>

  <screenshots>
    <screenshot type="default">
      <image>
        https://raw.githubusercontent.com/noobping/listenmoe/v1.0.5/data/io.github.noobping.listenmoe.screenshot.png</image>
      <caption>When connected and there is no album or artist image</caption>
    </screenshot>
    <screenshot>
      <image>
        https://raw.githubusercontent.com/noobping/listenmoe/v1.0.5/data/io.github.noobping.listenmoe.screenshot_color.png</image>
      <caption>Colored window when connected</caption>
    </screenshot>
    <screenshot>
      <image>
        https://raw.githubusercontent.com/noobping/listenmoe/v1.0.5/data/io.github.noobping.listenmoe.screenshot_popover.png</image>
      <caption>Album or artist image popover</caption>
    </screenshot>
  </screenshots>

  <provides>
    <binary>listenmoe</binary>
  </provides>

  <releases>
    <release version="1.0.5" date="2026-01-17">
      <description>
        <li>Translated image captions</li>
        <li>Updated screenshots to use a more reasonable window size</li>
      </description>
    </release>
    <release version="1.0.4" date="2026-01-06">
      <description>
        <p>
          Clarified the application description.
        </p>
      </description>
    </release>
    <release version="1.0.3" date="2025-12-26">
      <description>
        <p>
          Streaming logic now better handles connection issues and stream changes.
        </p>
      </description>
    </release>
    <release version="1.0.2" date="2025-12-24">
      <description>
        <p>
          Removed gaps between sound bars.
        </p>
      </description>
    </release>
    <release version="1.0.1" date="2025-12-23">
      <description>
        <p>
          This release focuses on visuals and localization.
        </p>
        <ul>
          <li>Fine-tuned dark/light mode detection so light colors are no longer mistaken for dark ones.</li>
          <li>Polished translations and improved how they are applied.</li>
        </ul>
      </description>
    </release>
    <release version="1.0.0" date="2025-12-21">
      <description>
        <p>
          Initial release.
        </p>
        <ul>
          <li>Listen to J-POP and K-POP</li>
          <li>Pause and resume the live stream</li>
        </ul>
      </description>
    </release>
  </releases>
</component>
