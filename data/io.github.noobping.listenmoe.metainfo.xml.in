  <provides>
    <binary>listenmoe</binary>
  </provides>

  <releases>
    <release version="1.0.2" date="2025-12-24">
      <description>
        <p>
          Removed gaps between sound bars.
        </p>
      </description>
    </release>
    <release version="1.0.1" date="2025-12-23">
      <description>
        <p>
          This release focuses on visuals and localization.
        </p>
        <ul>
          <li>Fine-tuned dark/light mode detection so light colors are no longer mistaken for dark ones.</li>
          <li>Polished translations and improved how they are applied.</li>
        </ul>
      </description>
    </release>
    <release version="1.0.0" date="2025-12-21">
      <description>
        <p>
          Initial release.
        </p>
        <ul>
          <li>Listen to J-POP and K-POP</li>
          <li>Pause and resume the live stream</li>
        </ul>
      </description>
    </release>
  </releases>
</component>